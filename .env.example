# Core
ENVIRONMENT=dev
BASE_URL=http://localhost:8000
SECRET_KEY=CHANGE_ME_SUPER_SECRET
ALLOWED_HOSTS=*
ENFORCE_HTTPS=false
SESSION_MAX_AGE_SECONDS=2592000
SESSION_COOKIE_NAME=session_token
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE=lax

# OpenAI (optional; if missing, app uses deterministic mock reports)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5.2

# Payments
PAYMENTS_MODE=mock  # mock|stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_MONTHLY=
STRIPE_PRICE_ID_PRO=
STRIPE_PRICE_ID_PREMIUM=

# Email (optional; if missing, login codes print in console and report emails print to logs)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=
EMAIL_FROM_NAME=BioAge Reset Protocol
SMTP_USE_TLS=true
SMTP_USE_SSL=false
SMTP_TIMEOUT_SECONDS=20
EMAIL_SEND_RETRIES=3

# Admin bootstrap (comma-separated emails) - optional
ADMIN_EMAILS=

#db
DATABASE_URL=postgresql+asyncpg://app:app@db:5432/appdb
REDIS_URL=redis://redis:6379/0
REPORT_DIR=/data/reports
UPLOADS_DIR=/data/uploads

# Storage backend
STORAGE_BACKEND=local  # local|s3
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_ENDPOINT_URL=
S3_PUBLIC_BASE_URL=
S3_PRESIGN_EXPIRY_SECONDS=3600
S3_REPORTS_PREFIX=reports
S3_UPLOADS_PREFIX=uploads
